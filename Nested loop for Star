b=int(input("Enter the number of block:"))
l=int(input("Enter the number of lines:"))
s=int(input("Enter the number of star's:"))
c=0
for i in range(b):
    c=0
    for j in range(l-i):
        for k in range(s):
            print("*",end=" ")
            c=c+1
        print()
    print(c)
    print("..........................")
